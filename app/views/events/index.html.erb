  <!-- Main div -->
  <div class="col-md-12 content-background">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Events</h1>
          <ul class="breadcrumb">
            <li><%= link_to 'Events', events_path %></li>
          </ul>
        </div>
        <div class="col-md-6 text-right">
          <div class="clear-space"></div>
          <!--<button class="btn btn-success green" ng-controller="CreateEventModalController" ng-click="openCreateEvent()">
            Create New Event <i class="glyphicon glyphicon-plus"></i> 
          </button>-->
          <!--<%= link_to "<button class='btn btn-success green'><i class='glyphicon glyphicon-plus'></i> Create a New Event</button>".html_safe, new_event_path %>-->
          <button type="button" class="btn btn-success green" data-toggle="modal" data-target="#myModal">
            <i class='glyphicon glyphicon-plus'></i> Create a New Event
          </button>
        </div>
      </div>
      
      <!-- First form -->
      <% @events.each do |event| %>
        <div class="row">
          <div class="col-md-2">
            <img src="http://placehold.it/150x150" alt="placeholder" />
            <h4 class="text-center">
              <!--<a href ng-controller="EditEventModalController" ng-click="openEditEvent(event)"><i class="glyphicon glyphicon-pencil"></i></a>
              <a href ng-controller="CancelEventModalController" ng-click="openCancelEventModal(event)"><i class="glyphicon glyphicon-trash"></i></a>
              -->
              <!--<a href data-toggle="modal" data-target="#eventModal" data="event">
                <i class="glyphicon glyphicon-pencil"></i>
              </a>-->
              <!--<%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, :data => {:toggle => 'modal', :target => '#eventModal'} %>-->
              <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_event_path(event) %>
              <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, event, method: :delete, data: { confirm: 'Are you sure?' } %>
            </h4>
          </div>
          <div class="col-md-10">
            <h2 class="custom-heading"><%= link_to event.title, event %></h2>
            <p><%= event.description %></p>
            <p>
              <em>
                <%= event.starts_at.strftime("%A, %B %d, %Y") %><br />
                <%= event.starts_at.strftime(" %I:%M %p") %> - <%= event.ends_at.strftime(" %I:%M %p") %><br />
                <a popover-placement="right" popover="Sample text<br />Sample text" popover-title="Members Going" href> Members Going</a>
              </em>
            </p>
          </div>
        </div>
        <hr />
        <div class="clear-space"></div>
      <% end %>

      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

         <!--<%= link_to "<button class='btn btn-success green btn-block text-center'><i class='glyphicon glyphicon-plus'></i> Create a New Event</button>".html_safe, new_event_path %>-->

         <button type="button" class="btn btn-success green btn-block text-center" data-toggle="modal" data-target="#myModal">
            <i class='glyphicon glyphicon-plus'></i> Create a New Event
          </button>


          <!--<button class="btn btn-success green btn-block text-center" ng-controller="CreateEventModalController" ng-click="openCreateEvent()">
            <i class="glyphicon glyphicon-plus"></i> Create a New Event
          </button>-->
        </div>
        <div class="col-md-3"></div>
      </div>
      <div class="clear-space"></div>

       <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
              <%= form_for(@event) do |f| %>
                <% if @event.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                    <ul>
                    <% @event.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="field">
                  <%= f.label :user_id %><br>
                  <%= f.number_field :user_id %>
                </div>
                <div class="field">
                  <%= f.label :title %><br>
                  <%= f.text_field :title %>
                </div>
                <div class="field">
                  <%= f.label :description %><br>
                  <%= f.text_area :description %>
                </div>
                <div class="field">
                  <%= f.label :starts_at %><br>
                  <%= f.datetime_select :starts_at %>
                </div>
                <div class="field">
                  <%= f.label :ends_at %><br>
                  <%= f.datetime_select :ends_at %>
                </div>
                </div>
                <div class="actions modal-footer">
                  <%= f.submit :class=> 'btn btn-success' %>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>

      <!-- Edit Modal -->
      <div class="modal fade" id="eventModal" tabindex="-1" role="dialog" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="eventModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
              <%= form_for(@event) do |f| %>
                <% if @event.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                    <ul>
                    <% @event.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="field">
                  <%= f.label :user_id %><br>
                  <%= f.number_field :user_id %>
                </div>
                <div class="field">
                  <%= f.label :title %><br>
                  <%= f.text_field :title %>
                </div>
                <div class="field">
                  <%= f.label :description %><br>
                  <%= f.text_area :description %>
                </div>
                <div class="field">
                  <%= f.label :starts_at %><br>
                  <%= f.datetime_select :starts_at %>
                </div>
                <div class="field">
                  <%= f.label :ends_at %><br>
                  <%= f.datetime_select :ends_at %>
                </div>
                </div>
                <div class="actions modal-footer">
                  <%= f.submit :class=> 'btn btn-success' %>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              <% end %>
            </div>
            <!--<div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>-->
          </div>
        </div>
      </div>

  
    
    </div><!--container-->
  </div>

