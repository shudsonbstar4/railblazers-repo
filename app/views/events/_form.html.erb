<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :starts_at %><br>
    <%= f.text_field :starts_at, :class => 'form-control', :data => {:provide => 'datepicker'} %>
  </div>

  <div class="form-group">
    <%= f.label :ends_at %><br>
    <%= f.text_field :ends_at, :class => 'form-control', :data => {:provide => 'datepicker'} %>
  </div>
  <div class="form-actions text-right">
    <%= f.submit :class => 'btn btn-success green' %>
  </div>
<% end %>

<script>
  (jQuery, function(){
    $('#timepicker').timepicker();
  })
</script>
